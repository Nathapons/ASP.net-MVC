@model IEnumerable<BasicASPTutorial.Models.Student>;

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">คะแนนสอบวิชาคอมพิวเตอร์</h1>

<table class="table table-dark table-striped mt-3">
    <thead>
      <tr>
        <th scope="col">รหัสนักเรียน</th>
        <th scope="col">ชื่อนักเรียน</th>
        <th scope="col">คะแนนสอบ</th>
        <th scope="col">ผลคะแนนสอบ</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
        @foreach(var student in Model)  
        {
            <tr>
                <th scope="row">@student.Id</th>
                <td>@student.Name</td>
                <td>@student.Score</td>
                @if (@student.Score >= 50)
                {
                    <td><strong class="text-success">สอบผ่าน</strong></td>
                }
                else
                {
                    <td><strong class="text-danger">สอบตก</strong></td>
                }
                <td>
                    <a 
                        class="btn btn-warning"
                        asp-controller="Student"
                        asp-action="Edit"
                        asp-route-id="@student.Id"
                    >Edit</a>
                </td>
                <td>
                    <a 
                        class="btn btn-danger"
                    >Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table